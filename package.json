{
  "name": "",
  "version": "0.0.1",
  "description": "",
  "keywords": [
    "mt2",
    "ali",
    "lomt",
    "config",
    "config loader"
  ],
  "main": "./bundles/index.umd.js",
  "module": "./esm5/index.js",
  "es2015": "./esm2015/index.js",
  "typings": "./types/index.d.ts",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "jinc.cjc <jinc.cjc@alibaba-inc.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8.5",
    "npm": ">=6.0",
    "yarn": "^1.0"
  },
  "scripts": {
    "cleanup": "shx rm -rf dist",
    "prebuild": "tnpm run cleanup && tnpm run verify",
    "build": "tsc && tsc --target es2018 --outDir dist/esm2015 && rollup -c config/rollup.config.js && rollup -c config/rollup.config.js --environment NODE_ENV:production",
    "postbuild": "node scripts/copy",
    "docs": "rm -rf docs && typedoc --plugin typedoc-plugin-markdown --out docs src",
    "test": "jest -c ./config/jest.config.js",
    "test:watch": "tnpm t -- --watch --verbose",
    "test:coverage": "tnpm t -- --coverage",
    "test:ci": "tnpm t -- --ci",
    "validate-js": "tsc -p ./config && tsc -p ./scripts",
    "verify": "tnpm run validate-js && tnpm run style && tnpm run test:ci",
    "commit": "git-cz",
    "style": "tnpm run format -- --list-different && tnpm run lint",
    "style:fix": "tnpm run format:fix && tnpm run lint:fix",
    "format": "prettier \"./src/**/*.{ts,tsx,js,jsx,css,scss,sass,less,md}\"",
    "format:fix": "tnpm run format -- --write",
    "lint": "tslint --project tsconfig.json --format codeFrame",
    "lint:fix": "tnpm run lint -- --fix",
    "prerelease": "tnpm run build",
    "release": "standard-version",
    "postrelease": "node scripts/copy && node scripts/build && tnpm run release:github && tnpm run release:npm",
    "release:github": "git push --no-verify --follow-tags origin master",
    "release:npm": "tnpm publish dist",
    "release:preflight": "tnpm pack ./dist --dry-run",
    "size": "node scripts/file-size ./dist/bundles/index.umd.min.js ./dist/bundles/index.esm.min.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w -r 0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --config config/commitlint.config.js -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "tnpm run style && tnpm test -- --bail --onlyChanged"
    }
  },
  "lint-staged": {
    "src/*.{ts,tsx,js,jsx,css,scss,sass,less,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "tnpm run lint:fix",
      "git add"
    ]
  },
  "peerDependencies": {
    "tslib": ">=1.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@types/jest": "23.3.10",
    "@types/json5": "0.0.30",
    "@types/lodash.clonedeepwith": "4.5.6",
    "@types/node": "8.10.*",
    "@types/prettier": "1.15.2",
    "@types/prompts": "^2.0.5",
    "@types/webpack-config-utils": "2.3.0",
    "brotli-size": "0.0.3",
    "commitizen": "3.0.5",
    "cross-var": "1.1.0",
    "cz-conventional-changelog": "2.1.0",
    "gzip-size": "5.0.0",
    "husky": "1.3.0",
    "jest": "23.6.0",
    "jest-watch-typeahead": "0.2.0",
    "kleur": "3.0.1",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "pretty-bytes": "5.1.0",
    "rollup": "0.68.2",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-json": "3.1.0",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-replace": "2.1.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-terser": "3.0.0",
    "rollup-plugin-uglify": "6.0.0",
    "shx": "0.3.2",
    "standard-version": "4.4.0",
    "ts-jest": "23.10.5",
    "tslib": "1.9.3",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-config-standard": "8.0.1",
    "tslint-etc": "1.2.12",
    "tslint-react": "3.6.0",
    "typedoc": "^0.19.2",
    "typedoc-plugin-markdown": "^3.0.0",
    "typescript": "^3.7.0",
    "typescript-tslint-plugin": "0.2.1",
    "webpack-config-utils": "2.3.1"
  }
}
